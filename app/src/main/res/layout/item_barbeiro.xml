<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtNomeBarbeiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nome Barbeiro"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="18sp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtEmailBarbeiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawablePadding="8dp"
            android:text="Email"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/txtEnderecoBarbeiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_dialog_map"
            android:drawablePadding="8dp"
            android:text="Endereço"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/txtServicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:text="Serviços"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/txtDiasDisponiveis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:text="Dias Disponíveis"
            android:textAppearance="?attr/textAppearanceBody2" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>