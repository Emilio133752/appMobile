<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yourSelectedColor</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/darkgray</item>
    </style>

    <style name="AppThemeNoActionbar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <!-- Fundo branco -->
        <item name="android:backgroundTint">@android:color/white</item>

        <!-- Bordas arredondadas -->
        <item name="cornerRadius">16dp</item>

        <!-- Sombra -->
        <item name="android:elevation">4dp</item>

        <!-- Tamanho do texto e cor -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>

        <!-- Cor de destaque ao clicar (ripple) -->
        <item name="android:stateListAnimator">@android:animator/state_list_animator</item>
    </style>

</resources>
