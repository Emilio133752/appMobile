<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yourSelectedColor</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/darkgray</item>

    </style>

    <!-- Adicione estes estilos ao seu arquivo styles.xml -->
    <style name="TimePickerMinimal" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">#212121</item>
    </style>


    <style name="TimePickerMinimalist" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blueish</item>
        <item name="colorControlActivated">@color/blueish</item>
        <item name="android:textColorPrimary">#303030</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppThemeNoActionbar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
