<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Estilos específicos que não são temas -->
    <style name="TimePickerMinimal" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">#212121</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/design_default_color_primary</item>
        <item name="android:textColorPrimary">@color/design_default_color_primary</item>
    </style>

    <style name="TimePickerMinimalist" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/Black</item>
        <item name="colorControlActivated">@color/blueish</item>
        <item name="android:textColorPrimary">#303030</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- AppTheme é mantido aqui, mas pode ser movido para themes.xml se preferir -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/yourSelectedColor</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/darkgray</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeNoActionbar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>